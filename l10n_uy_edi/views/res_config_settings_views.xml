<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_edi_config_settings_view_form">
        <field name="name">res.config.settings.view.form.inherit.l10n_uy_edi</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='analytic']" position="after">
                <h2>Electronic Invoice Provider</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">
                                CFE
                            </span>
                            <br/>
                            <button name="action_cfe_config_wizard" icon="fa-arrow-right" type="object" string="Configure Wizard" class="btn-link"/>
                        </div>
                    </div>
                    
                </div>
            </xpath>
        </field>
    </record>

</odoo>
